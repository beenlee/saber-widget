// @desc    图片查看器
// @author  zfkun(zfkun@msn.com)


@require 'rider-ui/core'


$-role-attr ?= 'data-role'




// mixins
// ================

// base
ui-imageview-base()
    display: inline-block
    size: 100%


    > [{$-role-attr}~=header]
        absolute: 0 _ _ 0
        z-index: 2046

        width: 100%
        height: 44px
        line-height: @height

        font-size: rem(20px)
        font-weight: 700

        text-align: center
        color: #fff
        background: rgba(0, 0, 0, .5)

        transition: transform 0.5s ease-in-out 200ms

    [{$-role-attr}~=close]
        absolute: 0 _ _ 0
        z-index: 2047

        float: left

        box-sizing: border-box
        padding: 0 10px
        font-size: rem(16px)


    > [{$-role-attr}~=wrapper]
        white-space: nowrap
        size: 100%

    [{$-role-attr}~=item]
        absolute: 0 _ _ _
        z-index: 1999
        box-sizing: border-box
        width: 100%

        img
            // Hack to get rid of flickering on images (iPhone bug) by
            // forcing hardware acceleration. See
            // http://stackoverflow.com/questions/3461441/prevent-flicker-on-webkit-transition-of-webkit-transform
            backface-visibility: hidden

            user-select: none
            user-drag: none

            display: block
            margin: 0 auto

            transition: all 500ms


// variables
// ================


// exports
// ================


.ui-imageview
    ui-imageview-base()
